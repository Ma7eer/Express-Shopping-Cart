<% include ../partials/header.ejs %>

<div class="d-flex flex-column align-items-center">
<h1>Checkout</h1>
<h4>You Total: $<%= totalPrice %></h4>

<% if (noError) { %>
  <div id="payment-errors" class="alert alert-danger d-none">
    <%= errMsg %>
  </div>
<% } %>

<form action="/checkout" method="post" id="checkout-form">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control form-control-sm" id="name" name="name" aria-describedby="emailHelp" placeholder="Enter Name">
  </div>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control form-control-sm" name="address" id="address" aria-describedby="emailHelp" placeholder="Enter Address">
  </div>
  <div class="form-group">
    <label for="card-holder-name">Card Holder Name</label>
    <input type="text" class="form-control form-control-sm" id="card-holder-name" aria-describedby="emailHelp" placeholder="Card Holder Name">
  </div>
  <div class="form-group">
    <label for="card-number">Credit Card Number</label>
    <input type="text" class="form-control form-control-sm" id="card-number" aria-describedby="emailHelp" placeholder="Card Number">
  </div>
  <div class="form-group">
  <div class="row">
  <div class="col">
  <label for="card-expiry-month">Expiration Month</label>
    <input type="text" class="form-control form-control-sm" id="card-expiry-month" placeholder="Month">
  </div>
  <div class="col">
  <label for="card-expiry-year">Expiration Year</label>
    <input type="text" class="form-control form-control-sm" id="card-expiry-year" placeholder="Year">
  </div>
</div>
  </div>

<div class="form-group">
<label for="cvc-card">CVC</label>
<input type="number" class="form-control form-control-sm" id="cvc-card" aria-describedby="emailHelp" placeholder="CVC">
</div>
  <button type="submit" class="btn btn-success">Buy Now</button>
</form>
</div>
<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>


<% include ../partials/footer.ejs %>