<% include ../partials/header.ejs %>

<div class="card form-card">
<h1>Admin Sign in</h1>

<% if (messages.length > 0) { %>

<div class="alert alert-danger" role="alert">
  <%= messages %>
</div>

<% } %>


<form action="/user/signin" method="POST" >
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" name="email"
    id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">email is admin@gmail.com</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" name="password"
    id="exampleInputPassword1" placeholder="Password">
    <small id="emailHelp" class="form-text text-muted">password is admin</small>
  </div>
  <div class="form-group">
  <label for="exampleInputEmail1">Admin Code</label>
  <input type="text" class="form-control" name="admin-code" id="admin-code"
  placeholder="Enter admin code">
  <small id="emailHelp" class="form-text text-muted">Code is abc123</small>
</div>
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <button type="submit" class="btn btn-primary">Sign in</button>
</form>
</div>

<% include ../partials/footer.ejs %>